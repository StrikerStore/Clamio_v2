# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=clamio_v3

# Shipway API Configuration
SHIPWAY_USERNAME=your_shipway_username
SHIPWAY_PASSWORD=your_shipway_password
SHIPWAY_BASIC_AUTH_HEADER=your_basic_auth_header

# Server Configuration
PORT=5000
NODE_ENV=production

# Shopify Configuration (if using)
SHOPIFY_STORE_URL=your_store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_access_token

# Encryption Key (for multi-store feature)
# Generate a secure 32-character key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# Database Migrations
# Set to 'false' to disable automatic migrations on server startup
# Default: true (migrations run automatically)
RUN_MIGRATIONS=true